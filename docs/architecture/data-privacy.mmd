        corrections["Corrections\nAmendments to charges"]
        recon["Reconciliation\nPosting disposition"]
        settle["Settlement\nPeriod aggregates\nNet amounts"]
    end

    subgraph offchain["OFF-CHAIN (Agency Back-Office Only)"]
        direction LR
        pii["Customer PII\nName, address\nPayment method"]
        payment["Payment Transfer\nBank wire / ACH"]
    end

